.swiperClass {
  margin: 0;
  margin-top: 10px; 
  height: 230px;
}

.slide-image {
  width: 100%; 
  height: 72.5%;
  border-radius: 10px;
  position: relative;
  box-shadow: 0px 5px 6px rgb(201, 200, 200);
}
 
image.active {
  transform: none;
  transition: all 0.2s ease-in 0s;
} 
 
image.quiet {
  transform: scale(0.8333333);
  transition: all 0.2s ease-in 0s;
}
.inner-down {
  position: relative;
}
.item-txt {
  width: 65%;
  margin: 0 auto;
}
.item-txt .inner-title {
  text-align: center;
  font-size: 14px;
}

.item-txt .inner-pro {  
  font-size: 12px;
  width: 90.5%;
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
}
.inner-right {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: -10rpx;
  bottom: 1rpx;
}
/* 特殊下标样式 */
.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.swiper-box .wx-swiper-dot{
    width:40rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 20rpx;
    justify-content:space-between;
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(221, 221, 221, 0.8);
    border-radius: 8rpx
}
.swiper-box .wx-swiper-dot-active::before{
    background:rgba(244,0,0,0.8);   
}
