/* pages/list/list.wxss */
.page {  
  margin-left: 20rpx;  
  margin-right: 20rpx; 
  height: 100%; 
}  
.swiper-tab {  
  display: flex;  
  flex-direction: row;  
  line-height: 60rpx; 
  width: 97.5%; 
  border-top: 2rpx solid rgba(145, 143, 143, 0.705); 
  border-bottom: 2rpx solid rgba(145, 143, 143, 0.705); 
  margin: 0 auto;
  margin-top: 15rpx;
}  
.tab-item {  
  width: 50%;  
  text-align: center;  
  font-size: 14px;  
  color: rgba(87, 82, 82, 0.952);  
}  
.swiper {  
  height: 1000px;
}  
.on {  
 
  color: rgb(236, 45, 45);  
  /* border-top: 6rpx solid rgb(236, 45, 45); */
  border-bottom: 6rpx solid rgb(236, 45, 45); 
  border-radius: 2.5rpx; 
  
} 
/* 顶部样式  */
.row {
  
}
.row .line-text {
  text-align: center;
  font-size: 16px;
}
.row .line {
 display: flex;
 height: 18px;
}
.line-left {
  height: 1px;
  width: 32.5%;
  margin-left: 15rpx;
  background: rgb(163, 163, 163);
  margin-top: 10px;
}
.line-center {
  width: 100px;
  height: 18px;
  background: rgba(236, 45, 45, 0.849);
  color: white;
  font-size: 13px;
  border: 1px solid;
  border-radius: 10rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 18px;
}
.line-right {
  height: 1px;
  width: 32.5%;
  margin-right: 15rpx;
  background: rgb(163, 163, 163);
  margin-top: 10px;
}
/* 顶部图片 */
.image  {
  width: 98.5%;
  height: 180px;
  border: 1px solid;
  border-radius: 10px;
  margin: 0 auto;
  margin-top: 10rpx;
}
.image  image {
  height: 100%;
  width: 100%;
  border-radius: 10px;
  box-shadow: 0px 5px 6px rgba(192, 192, 192, 0.856);
}
/* 方案历史 */
.tab {
  width: 97.5%;
  height: 100%;
  margin: 0 auto;
  margin-top: 15rpx;
}
.tab-box {
  width: 97.5%;
  height: 250px;
  margin: 0 auto;
}
.tab-box .tab-image {
  width: 100%;
  height: 180px;
  border-radius: 10px;
  margin: 0 auto;
  box-shadow: 0px 5px 6px rgba(192, 192, 192, 0.856);
}
.box-txt {
  width: 95%;
  margin: 0 auto;
  margin-top: 15rpx;
}
.box-txt .main {
  display: flex;
  margin-bottom: 10rpx;
}
.box-txt .main image {
  height: 22.5px;
	width: 22.5px;

}
.box-txt .txt-title {
  font-size: 13px;
  width: 100%;
  line-height: 22.5px;
  margin-left: 10rpx;
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
}
.box-txt .intro {
  display: flex;
}
.box-txt .intro image {
  height: 22.5px;
	width: 22.5px;
}
.box-txt .intro .txt-pro {
  margin-left: 10rpx;
  line-height: 22.5px;
  font-size: 13px;
  width: 100%;
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
}

/* footer */
.footer .footer-text {
  margin-top: 25rpx;
  text-align: center;
  font-size: 14px;
}
.footer .footer-line {
 display: flex;
 height: 18px;
 margin-top: 10rpx;
}
.footer-left {
  height: 1px;
  width: 30%;
  margin-left: 15rpx;
  background: linear-gradient(to left,rgb(163, 163, 163) ,#fff);
  margin-top: 10px;
}
.footer-center {
  width: 110px;
  height: 18px;
  background: rgba(194, 194, 194, 0.712);
  color: white;
  font-size: 12px;
  border: 1px solid;
  border-radius: 10rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 18px;
  margin-bottom: 10rpx;
}
.footer-right {
  height: 1px;
  width: 30%;
  margin-right: 15rpx;
  background: linear-gradient(to right,rgb(163, 163, 163) ,#fff);
  margin-top: 10px;
}
