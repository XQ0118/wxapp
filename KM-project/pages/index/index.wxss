  margin-top: 10px;
}
.footer-center {
  width: 110px;
  height: 18px;
  background: rgba(194, 194, 194, 0.712);
  color: white;
  font-size: 12px;
  border: 1px solid;
  border-radius: 10rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 18px;
  margin-bottom: 10rpx;
}
.footer-right {
  height: 1px;
  width: 30%;
  margin-right: 15rpx;
  background: linear-gradient(to right,rgb(163, 163, 163) ,#fff);
  margin-top: 10px;
}
